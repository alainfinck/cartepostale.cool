DATABASE_URL=postgres://user:password@host:5432/dbname
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Cloudflare R2 – stockage des médias (obligatoire en prod Coolify pour éviter la perte des images)
# S3_ACCESS_KEY_ID : uniquement la valeur de l’Access Key (pas de "key=value", pas d’espaces). Sinon erreur Sigv4 "5 slash-separated parts, not 1".
S3_BUCKET=cartepostale
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=https://ce9bf2e12d51842c76e9929b56b1e470.r2.cloudflarestorage.com
# URL publique du bucket : R2.dev subdomain ou custom domain (ex. https://img.cartepostale.cool), sans slash final
R2_PUBLIC_BASE_URL=https://img.cartepostale.cool

# Revolut Merchant API – paiement (clé secrète côté serveur uniquement)
REVOLUT_SECRET_KEY=
# Optionnel : URL de redirection après paiement (ex. https://votresite.com)
NEXT_PUBLIC_APP_URL=

# Google OAuth – connexion sociale (Auth.js / NextAuth)
# Client ID : peut être exposé (NEXT_PUBLIC_ pour afficher le bouton côté client)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Secret Auth.js (optionnel si PAYLOAD_SECRET est défini)
AUTH_SECRET=
